{
  "compilerOptions": {
    /* =========================
       TARGET E AMBIENTE NODE
       ========================= */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",

    /* =========================
       ESTRUTURA DE PASTAS
       ========================= */
    "rootDir": "./src",
    "outDir": "./dist",

    /* =========================
       RESOLUÇÃO DE MÓDULOS
       ========================= */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* =========================
       QUALIDADE E SEGURANÇA
       ========================= */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* =========================
       PERFORMANCE E BUILD
       ========================= */
    "incremental": false,
    "sourceMap": false,
    "removeComments": true,

    /* =========================
       TIPAGEM NODE
       ========================= */
    "types": ["node"]
  },

  "include": ["src/**/*.ts"],

  "exclude": [
    "node_modules",
    "dist",
    "prisma",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}

